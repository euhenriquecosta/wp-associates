{
  "name": "associados/plugin",
  "description": "Plugin para registrar associados com mapa interativo",
  "type": "wordpress-plugin",
  "autoload": {
    "psr-4": {
      "Associates\\": "includes/"
    }
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "php-stubs/wordpress-stubs": "^6.0",
    "szepeviktor/phpstan-wordpress": "^2.0"
  },
  "scripts": {
    "build": "bin/build.sh",
    "dev": "bin/dev.sh",
    "setup": "bin/setup.sh",
    "start": "docker compose up -d",
    "stop": "docker compose down",
    "clean": "docker compose down -v",
    "clean:build": "rm -rf dist && rm -rf build && sleep 1 && echo '📁 Pasta dist e build limpas'",
    "restart": "docker compose restart",
    "logs": "docker compose logs -f wordpress"
  }
}
